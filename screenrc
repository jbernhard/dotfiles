#
# ~/.screenrc
#


# horribleness
startup_message off

# detach on crash etc.
autodetach on

# use X scrolling mechanism
termcapinfo xterm* ti@:te@

# set scrollback length
defscrollback 10000

# remove consecutive blank lines in scrollback
compacthist on

# make text from fullscreen apps disappear when closed
altscreen on

# set timeout for silence monitoring
silencewait 15

# disable flow control
defflow off

# disable visual bell
vbell off

# 256 colors
term screen-256color
terminfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# for searching
ignorecase on

# statusbar
hardstatus alwayslastline
hardstatus string '%{= kw} %?%-Lw%?%{r}[%{+b W}%n*%f%t%?(%u)%?%{-b r}]%{w}%?%+Lw%?%?'

# make bold font also be bright
attrcolor b ".i"


#
# keyboard
#

# make space the command key
escape ^@^@
bind ^@ other

# extra number keys
bind ` select 0
bind 0 select 10
bind '[' select 11
bind ']' select 12

# dvorak left and right
bind h prev
bind ^h prev
bind s next
bind ^s next

# dvorak ease of use
bind t screen
bind ^t screen
bind n quit
bind ^n quit

# other helpful shortcuts
bind p paste .
bind r source $HOME/.screenrc
bind ^r source $HOME/.screenrc

# dvorak copy mode
markkeys j=t:k=n:l=s:$=-:\^=_:n=l
