#
# ~/.config/i3status/config
#

general {
  colors = true
  interval = 1
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "time"

cpu_usage {
  format = "%usage"
}

cpu_temperature 0 {
  format = "%degrees"
  max_threshold = 60
  path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

time {
  format = "%a %d %b %T"
}
